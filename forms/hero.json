        // INVENTORY
        {
            "title": "Inventory",
            "icon": "archivebox",
            "sections": [{
                "type": "group",
                "title": "Currency Total: {% eval %} ({{data.currency.cp|default: 0}} / 100) + ({{data.currency.sp|default: 0}} / 10) + {{data.currency.gp|default: 0}} {% endeval %} gold",
                "fields": [{
                    "type": "hStack",
                    "fields": [{
                        "title": "Copper",
                        "placeholder": "—",
                        "type": "number",
                        "alignment": "top",
                        "attribute": "data.currency.cp",

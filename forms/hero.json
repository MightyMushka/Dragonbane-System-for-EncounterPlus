        // ABILITIES
        {
            "title": "Abilities",
            "sections": [{
                "title": "Abilities",
                "type": "list",
                "attribute": "data.ability",
                "attributeType": "Ability",
                "custom": {
                    "map": {
                        "wpcost": "data.wpcost",
                        "abilitytype": "data.abilitytype",
                    }
                },
                "form": {
                    "title": "Heroic Ability",
                    "sections": [{
                        "type": "group",
                        "fields": [{
                            "placeholder": "Common.Name",
                            "attribute": "name"
                        },
                            {
                                "placeholder": "Common.Description",
                                "type": "textArea",

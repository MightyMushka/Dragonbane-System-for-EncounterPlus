{
    "debug": false,
    "spacing": 2,
    "padding": [
        20,
        20,
        20,
        20
    ],
    "footer": true,
    "images": true,
    "views": [{
        "value": "{{name}}",
        "style": "title",
        "width": 0,
    },
        {
            "value": "{{data.abilitytype}} Ability",
            "style": "textitalic"
        },
        {
            "type": "divider"
        },
        {
            "value": "**Requirement:** {{data.requirement|default: 'N/A'}}",
            "type": "text"
        },
        {
            "value": "**Activation Cost:** {{data.wpcost|default: 'N/A'|suffix: ' WP'}}",
            "type": "text",
            "style": "body"
        },
        {
            "type": "divider"
        },
        {
            "type": "text",
            "value": "{{descr}}"
        },
        {
            "type": "text",
            "title": "Common.Notes",
            "value": "{{notes}}"
        },
        {
            "type": "image",
            "value": "{{image}}",
            "link": "{{image}}"
        },
        {
            "type": "text",
            "value": "{{footer}}"
        },
        {
            "type": "tags",
            "attribute": "tags"
        }]
}